.consulta
    .titulo-consulta
        .titulo.primero
            h1 SÓMOS UN BUFFETE DE EXITOS
        .titulo.segundo
            h1 CONOCÉ LA CLAUSULA DE EXITO EN NUESTROS SERVICIOS
    .contenido(layout="row")
        .panel#panel
            .panel-contenido
                md-toolbar
                    .md-toolbar-tools
                        p En Reyes Reyes contestamos tus dudas sobre el sistema penal en México
                md-autocomplete(flex
                    md-selected-item="ctrl.autocomplete.item"
                    md-selected-item-change="ctrl.autocomplete.seleccion(item)"
                    md-search-text="ctrl.autocomplete.busqueda"
                    md-search-text-change="ctrl.autocomplete.buscar(ctrl.autocomplete.busqueda)"
                    md-items="item in ctrl.autocomplete.filtrar(ctrl.autocomplete.busqueda)" 
                    md-item-text="item.nombre" 
                    md-min-length="0" 
                    placeholder="Busqueda Rápida, Escribe lo que quieras...")
                    md-item-template
                        strong {{item.modelo}}
                        span {{item.nombre}} {{item.apellido}}
                md-expansion-panel#circulo(md-component-id='{{elemento.key}}' ng-repeat="elemento in ctrl.topicos" ng-if="elemento.display" class="{{elemento.id}}")
                    md-expansion-panel-collapsed(ng-click="elemento.abrir()")
                        md-expansion-panel-icon
                        .md-title
                            p {{elemento.nombre}}
                    md-expansion-panel-expanded
                        md-expansion-panel-header 
                            h3 {{elemento.nombre}}
                        md-expansion-panel-content(ng-bind-html="elemento.respuesta")
                        md-expansion-panel-footer
                            md-button(ng-click="$panel.collapse(); elemento.cerrar()")
                                md-icon keyboard_arrow_up
                    md-divider
                cl-paging(cl-pages="paging.total" cl-steps="6" cl-page-changed="paging.onPageChanged()" cl-align="start start" cl-current-page="paging.current")
            .opacity(style="background-image :  url('img/consulta.jpg')")
